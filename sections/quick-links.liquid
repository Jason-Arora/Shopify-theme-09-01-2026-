
<section class="section {% unless section.settings.show_desktop %}hidden-lap-and-up{% endunless %}" data-section-id="{{ section.id }}" data-section-type="quick-links">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <header class="section__header">
        <h2 class="section__title heading h3">{{ section.settings.title | escape }}</h2>
        
        {%- if section.settings.link_title != blank and section.settings.link != blank -%}
          <a href="{{ section.settings.link }}" class="section__action-link link">{{ section.settings.link_title | escape }} {% render 'icon', icon: 'tail-right' %}</a>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="quick-links">
      {%- for block in section.blocks -%}
        
        <a href="{{ block.settings.link }}" class="quick-links__link {% if section.settings.expand_items %}quick-links__link--grow{% endif %} heading" {{ block.shopify_attributes }}>
          {% if block.settings.use_badge  %}
            <div class="badge position-{{ block.settings.badge_position }}" style="width: {{ block.settings.badge_size }}px; height:{{ block.settings.badge_size }}px;">
              {% if block.settings.badge_image != blank %}
                <img src="{{ block.settings.badge_image | image_url }}" width="" height="">
              {% endif %}
              {% if block.settings.discount_amount != blank and block.settings.badge_image != blank %}
                <span style="font-size:{{ block.settings.badge_font_size }}px">SAVE<br><span class="percentage" style="font-size:{{ block.settings.badge_font_size | plus: 10 }}px;">{{ block.settings.discount_amount }}</span></span>
              {% endif %}
            </div>
           {% endif %}
          
          {% if block.settings.link_image != blank %}
            <div class="image-container">
              <img src="{{ block.settings.link_image | image_url }}" width="" height="" class="circle" >
            </div>
          {% endif %}
            <span>{{- block.settings.title | escape -}}</span>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Quick links",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Quick links"
    },
    {
      "type": "checkbox",
      "id": "expand_items",
      "label": "Expand items to fill row",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_desktop",
      "label": "Show on desktop",
      "info": "The section will be visible in the theme editor even if this option is unchecked to make editing easier.",
      "default": true
    },
    {
      "type": "text",
      "id": "link_title",
      "label": "Link title"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Your link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "image_picker",
          "id": "link_image",
          "label": "Link Image"
        },
        {
          "type": "header",
          "content": "Save Badge",
        },
        {
          "type": "checkbox",
          "id": "use_badge",
          "default": true,
          "label": "Use Badge",
          "info": "Badges are only displayed if block is displaying an image"
        },
        {
          "type": "image_picker",
          "id": "badge_image",
          "label": "Badge Image"
        },
        {
          "type": "select",
          "id": "badge_position",
          "label": "Badge Position",
          "options": [
            {
              "label": "Top Left",
              "value": "top-left"
            },
            {
              "label": "Top Right",
              "value": "top-right"
            }
          ],
          "default": "top-left"
        },
        {
          "type": "range",
          "id": "badge_size",
          "label": "Badge Size",
          "min": 50,
          "max": 200,
          "step": 5,
          "default": 100,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "discount_amount",
          "label": "Discount Amount",
          "default": "25%"
        },
        {
         "type": "range",
          "id": "badge_font_size",
          "label": "Badge Font Size",
          "min": 16,
          "max": 30,
          "step": 1,
          "unit": "px",
          "default": 20
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Link",
      "name": "Quick links",
      "settings": {},
      "blocks": [
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        },
        {
          "type": "link"
        }
      ]
    }
  ]
}
{% endschema %}